<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fepeprog.test.SignActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/logo_splash"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/brand_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_splash"
        android:layout_centerHorizontal="true"
        android:text="Veveltra"
        android:textColor="#2196F3"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/brand_name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="Lorem Ipsum is simply dummy text."
        android:textColor="#2196F3" />

    <Button
        android:id="@+id/sign_up"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/describe"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:background="@drawable/button_change_blue"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="#fff" />

    <Button
        android:id="@+id/sign_in"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_up"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/button_change_white"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textColor="#2196F3" />
    </RelativeLayout>
</ScrollView>